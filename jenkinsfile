pipeline {
    agent any

    tools {
        maven 'maven'       // Nom configur√© dans Jenkins (Global Tool Configuration)
        jdk 'java'          // Idem pour JDK
    }

    stages {

        stage('Clone repository') {
            steps {
                git branch: 'main',
                url: 'https://github.com/OumaimaHouimell/devopstwin.git'
            }
        }

         stage('Build') {
                    steps {
                        sh 'mvn -B clean package'
                    }
                }
        }
}
