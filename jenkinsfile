pipeline {
    agent any

    tools {
        maven 'maven'
        jdk 'java'
    }

    environment {
        DOCKERHUB_CREDENTIALS = 'dockerhub'
        IMAGE_NAME = 'student-management-oumaima'
        DOCKERHUB_USER = 'lahouimeloumaima'
        IMAGE_TAG = '1.0'
        KUBECONFIG = '/var/lib/jenkins/.kube/config'
    }

    stages {

        stage('Clone repository') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/OumaimaHouimell/devopstwin.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn -B clean package'
            }
        }

        stage('SonarQube') {
            steps {
                withCredentials([string(credentialsId: 'sonar-credentials', variable: 'SONAR_TOKEN')]) {
                    withSonarQubeEnv('sonarqube') {
                        sh """
                            mvn sonar:sonar \
                            -Dsonar.projectKey=devopstwin \
                            -Dsonar.host.url=http://192.168.33.10:9000 \
                            -Dsonar.login=$SONAR_TOKEN
                        """
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                sh "docker build -t ${DOCKERHUB_USER}/${IMAGE_NAME}:${IMAGE_TAG} ."
            }
        }

        stage('Push Docker Image') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: "${DOCKERHUB_CREDENTIALS}",
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PASS'
                )]) {
                    sh '''
                        echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin
                        docker push ${DOCKER_USER}/${IMAGE_NAME}:${IMAGE_TAG}
                        docker logout
                    '''
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                script {
                    sh '''
                        set +e

                        echo "üîç Diagnostic Kubernetes..."

                        if [ ! -f "spring-deployment.yaml" ]; then
                            echo "‚ùå spring-deployment.yaml introuvable"
                            ls -la
                            exit 1
                        fi

                        kubectl cluster-info || exit 1

                        kubectl create namespace devops --dry-run=client -o yaml | kubectl apply -f -

                        kubectl apply -f spring-deployment.yaml -n devops --validate=false

                        echo "üìä Pods:"
                        kubectl get pods -n devops
                    '''
                }
            }
        }
    }

    post {
        success {
            emailext(
                to: "oumaimahouimel4@gmail.com",
                subject: "SUCCESS ‚úî Jenkins Pipeline",
                body: "Application d√©ploy√©e avec succ√®s sur Kubernetes"
            )
        }

        failure {
            emailext(
                to: "oumaimahouimel4@gmail.com",
                subject: "FAILURE ‚ùå Jenkins Pipeline",
                body: "Le pipeline a √©chou√©. V√©rifier Jenkins."
            )
        }
    }
}
